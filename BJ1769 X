#include <stdio.h>

int main(void)
{
	int num;
	scanf("%d",&num);
	int arr[101] = {0,};
	int sum = 0;
	int count = 0;

	while(1)
	{
		for(int i=0;i<7;i++)
		{
			arr[i] = num %10;
			num /= 10;
			sum += arr[i];
		}

		num = sum;

		if(num < 10)
		{
			break;
		}

		else
		{
			count++;
			continue;
		}
	}
	
	printf("%d\n",count);

	if(num%3==0)
	{
		printf("YES");
	}

	else
	{
		printf("NO");
	}

	return 0;
}
