#include <stdio.h>

int main(void)
{
	int num;
	int sum;
	int temp;
	int check=0;
	scanf("%d",&num);

	for(int i=1;i<num;i++)
	{
		sum = 0;
		temp = i;

		while(temp!=0)
		{	
			sum += temp%10;
			temp/=10; 
		}

		sum += i;

		if(sum==num)
		{
			temp = i;
			check = 1;
			break;
		}
	}


	if(check==0)
	{
		printf("%d",0);
	}
	else
	{
		printf("%d",temp);
	}

	return 0;
}
